@model IEnumerable<WebCadastroUsuario.Models.ExibirUsuario>

@{
    ViewData["Title"] = "Lista de Usuários";
}

<div class="row g-3">
    <div class="col-md-6">
        <div class="row">
            <div class="col-md-6 d-grid gap-2">
                <h2 class="me-2">Lista de Usuários</h2>
            </div>
            <div class="col-md-6 d-grid gap-2">
                <a class="btn btn-success align-self-center" asp-action="Create">Inserir um novo</a>
            </div>
        </div>
    </div>
    <div class="col-md-6 align-self-center">
        <form asp-action="Index" method="get">
            <div class="form-actions no-color row">
                <div class="col-md-8 d-grid gap-2">
                    <input type="text" name="Pesquisar" placeholder="Para buscar os excluidos digite: inativo" value="@ViewData["Pesquisar"]" />
                </div>
                <div class="col-md-4 d-grid gap-2">
                    <div class="row">
                        <div class="col-md-6 d-grid gap-2">
                            <input type="submit" value="Buscar" class="btn btn-primary" />
                        </div>
                        <div class="col-md-6 d-grid gap-2">
                            <a class="btn btn-warning" asp-action="Index">Limpar</a>
                        </div>
                    </div>
                </div> 
            </div>
        </form>
    </div>
</div>
<div class="table-responsive">
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Id)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Nome)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DataNascimento)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Email)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Telefone)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.UF)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Municipio)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Ativo)
                </th>
                <th>
                    @Html.DisplayName("Ações")
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model) {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Id)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Nome)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DataNascimento)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Telefone)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.UF)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Municipio)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Ativo)
                    </td>
                    <td>
                        <a class="btn btn-block btn-primary" asp-action="Edit" asp-route-id="@item.Id">Editar</a>
                        <a class="btn btn-block btn-info" asp-action="Details" asp-route-id="@item.Id">Detalhes</a>
                        <a class="btn btn-block btn-danger" asp-action="Delete" asp-route-id="@item.Id">Excluir</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>