@model WebCadastroUsuario.Models.NovoUsuario

@{
    ViewData["Title"] = "Novo Usuário";
}

<div class="d-flex justify-content-center mb-2">
    <h1>Inserir Novo Usuário</h1>
    <hr />
</div>
<div class="row justify-content-center">
    <div class="col-md-6">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group mb-2">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="row mb-2">
                <div class="form-group col-md-4">
                    <label asp-for="DataNascimento" class="control-label"></label>
                    <input asp-for="DataNascimento" class="form-control" />
                    <span asp-validation-for="DataNascimento" class="text-danger"></span>
                </div>
                <div class="form-group col-md-8">
                    <label asp-for="Email" class="control-label"></label>
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group mb-2">
                <label asp-for="Telefone" class="control-label"></label>
                <input asp-for="Telefone" class="form-control telefone"/>
                <span asp-validation-for="Telefone" class="text-danger"></span>
            </div>
            <div class="row mb-2">
                <div class="form-group col-md-3">
                    <label asp-for="UF" class="control-label"></label>
                    <select asp-for="UF" class="form-select">
                        <option selected>Selecione</option>
                        <option>PE</option>
                        <option>SP</option>
                        <option>RJ</option>
                        <option>...</option>
                    </select>
                    <span asp-validation-for="UF" class="text-danger"></span>
                </div>
                <div class="form-group col-md-9">
                    <label asp-for="Municipio" class="control-label"></label>
                    <input asp-for="Municipio" class="form-control" />
                    <span asp-validation-for="Municipio" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group mb-2">
                <label asp-for="Senha" class="control-label"></label>
                <input asp-for="Senha" class="form-control" />
                <span asp-validation-for="Senha" class="text-danger"></span>
            </div>
            <div class="row mt-3">
                <div class="col-md-6 d-grid gap-2">
                    <a class="btn btn-primary" asp-action="Index">Voltar</a>
                </div>
                <div class="col-md-6 d-grid gap-2">
                    <input type="submit" value="Salvar" class="btn btn-success" />
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}